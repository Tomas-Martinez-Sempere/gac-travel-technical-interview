{# templates/registro/exito.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Usuario registrado con éxito{% endblock %}
{% block content %}
    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Vaya, se ha producido un error</h2>
                                            <p class="cnf-mail mb-1">Vuelve a intentarlo más tarde.</p>
                                            <div class="d-inline-block w-100">
                                                <a href="{{ path('app_login') }}" class="btn btn-primary mt-3">Volver</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 text-center">
                                        <img src="{{ asset('images/error/error.png') }}" class="img-fluid" alt="">
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}