{# templates/panel/products/form-products.html.twig #}
{% extends '@panel/panel.html.twig' %}
{% set section = 'products' %}
{% block main %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                        <div>
                            <h4 class="mb-3">Nuevo producto</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    {% if accion == 'add' %}
                        <form action="{{ path('app_products_form') }}" method="post">
                    {% endif %}
                    {% if accion == 'update' %}
                        <form action="/products/update/{{ product.id }}" method="post">
                    {% endif %}
                        <div class="row">
                            <div class="col-md-6">
                                <!-- CON ERROR
                                <div class="form-group has-error has-danger">-->
                                <div class="form-group">
                                    <label>Nombre *</label>
                                    <input type="text" class="form-control" name="{{ field_name(form.name) }}"
                                        {% if accion == 'update' %}
                                            value="{{ product.name }}"
                                        {% endif %}
                                    >
                                    <!-- CON ERROR
                                    <div class="help-block with-errors">
                                        <ul class="list-unstyled">
                                            <li>Rellene este campo.</li>
                                        </ul>
                                    </div>-->
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Categoría *</label>
                                    <select class="form-control" name="{{ field_name(form.category) }}">
                                        {% for key, value in categories %}
                                            <option value="{{ value.id }}"
                                                {% if accion == 'update' %}
                                                    {% if product.category.id == value.id %}
                                                        selected
                                                    {% endif %}
                                                {% endif %}
                                            >{{ value.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12 mt-5 text-center">
                                {% if accion == 'add' %}
                                    <button type="submit" class="btn btn-primary mr-2">Añadir producto</button>
                                {% endif %}
                                {% if accion == 'update' %}
                                    <button type="submit" class="btn btn-primary mr-2">Modifica producto</button>
                                {% endif %}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
