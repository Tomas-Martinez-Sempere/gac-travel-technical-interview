{# templates/panel/categories/form-categories.html.twig #}
{% extends '@panel/panel.html.twig' %}
{% set section = 'categories' %}
{% block main %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                        <div>
                            {% if accion == 'add' %}
                                <h4 class="mb-3">Nueva categoría</h4>
                            {% endif %}
                            {% if accion == 'update' %}
                                <h4 class="mb-3">Modifica categoría</h4>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    {% if accion == 'add' %}
                        <form action="{{ path('app_categories_form') }}" method="post">
                    {% endif %}
                    {% if accion == 'update' %}
                        <form action="/categories/update/{{ categorie.id }}" method="post">
                    {% endif %}
                        <div class="row">
                            <div class="col-md-12">
                                <!-- CON ERROR
                                <div class="form-group has-error has-danger">-->
                                <div class="form-group">
                                    <label>Nombre *</label>
                                    <input type="text" class="form-control" name="{{ field_name(form.name) }}"
                                        {% if accion == 'update' %}
                                            value="{{ categorie.name }}"
                                        {% endif %}
                                    >
                                    <!-- CON ERROR
                                    <div class="help-block with-errors">
                                        <ul class="list-unstyled">
                                            <li>Rellene este campo.</li>
                                        </ul>
                                    </div>-->
                                </div>
                            </div>
                            <div class="col-md-12 mt-5 text-center">
                                {% if accion == 'add' %}
                                    <button type="submit" class="btn btn-primary mr-2">Añadir categoría</button>
                                {% endif %}
                                {% if accion == 'update' %}
                                    <button type="submit" class="btn btn-primary mr-2">Modifica categoría</button>
                                {% endif %}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}