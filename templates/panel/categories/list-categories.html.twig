{# templates/panel/categories/list-categories.html.twig #}
{% extends '@panel/panel.html.twig' %}
{% set section = 'categories' %}
{% block main %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                        <div>
                            <h4 class="mb-3">Categorías</h4>
                        </div>
                        <a href="{{ path('app_categories_form') }}" class="btn btn-primary add-list">
                            <i class="las la-plus mr-3"></i>Nueva categoría
                        </a>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="table-responsive mb-3">
                        <table class="table mb-0 tbl-server-info no-footer" role="grid">
                            <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data" role="row">
                                <th class="text-left">Código</th>
                                <th class="text-center">Nombre</th>
                                <th class="text-right">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td class="text-left">{{ category.id }}</td>
                                        <td class="text-center">{{ category.name }}</td>
                                        <td class="text-right">
                                            <a class="badge bg-danger" data-toggle="tooltip" data-placement="top" title="" data-original-title="Eliminar" href="/categories/delete/{{ category.id }}">
                                                <i class="las la-minus"></i>
                                            </a>
                                            <a class="badge bg-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" href="/categories/update/{{ category.id }}">
                                                <i class="ri-pencil-line"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}